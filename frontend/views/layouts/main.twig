    {{ register_asset_bundle('frontend/assets/AppAsset') }}  {# asset root for yii advanced template #}
    {{   void(this.beginPage()) }}
    <!DOCTYPE html>
    <html lang="{{ app.language }}">
        <head>
            <meta charset="{{ app.charset }}">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>{{ html.encode(this.title) }}</title>
            {{ html.csrfMetaTags | raw }}
            {{   void(this.head) }}
        </head>
        <body>
            {{   void(this.beginBody()) }}
            <header class="site-header sticky-top py-1">
                    {{ nav_bar_begin({
                        'brandLabel': '<div class="logo"><img src="' ~ url.base(true) ~'./assets/logo/vallefiorita.png" alt="logo"/></div>',
                        'brandUrl' : app.homeUrl,
                        'options' : {
                        'class' : 'container d-flex flex-column flex-md-row justify-content-between',
                        }
                        })
                    }}
                    {% set menuItems = [] %}
                        {% if app.user.isGuest == false %}
                            {% set menuItems = menuItems|merge([
                                {'label' : 'Home', 'url' : ['/site/index']},
                                {'label' : 'Chi Siamo', 'url' : ['/site/about']},
                                {'label' : 'Scansiona scontrino', 'url' : ['/scontrino/carica']},
                                {'label' : 'Lista Scontrini', 'url' : ['/scontrino/lista']},
                                {'label' : 'Profilo e Saldo punti', 'url' : ['/profilo']},
                                {'label' : 'Premi', 'url' : ['/premi']},
                                {'label' : 'Logout (' ~ app.user.identity.username ~ ')', 'url' : ['/site/logout'], 'linkOptions' : {'data-method' : 'post'}}
                                ])
                            %}
                        {% else %}
                            {% set menuItems = menuItems|merge([
                                {'label' : 'Home', 'url' : ['/site/index']},
                                {'label' : 'Chi Siamo', 'url' : ['/site/about']},
                                {'label' : 'Accedi', 'url' : ['/site/login']},
                                ])
                            %}
                        {% endif %}
                    {{ nav_widget({
                        'options': {
                        'class': 'navbar-nav navbar-right',
                        },
                        'items': menuItems
                        })
                    }}
                    {{ nav_bar_end() }}
            </section>
            {% block content %}
            {% endblock %}
            <footer class="footer">
            </footer>
            {{   void(this.endBody()) }}
        </body>
    </html>
    {{   void(this.endPage()) }}